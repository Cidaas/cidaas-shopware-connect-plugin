{
    "name": "cidaas/cidaas-for-shopware",
    "license": "MIT",
    "description": "Shopware plugin to allow cidaas to provide admin logins",
    "type": "shopware-platform-plugin",
    "version": "1.0.1",
    "keywords": [
        "cidaas",
        "shopware",
        "shopware-platform",
        "openid",
        "oauth"
    ],
    "authors": [
        {
            "name": "Widas GmbH",
            "role": "Manufacturer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Cidaas\\OpenAuth\\": "src/"
        }
    },
    "require": {
        "php": ">= 7.2",
        "league/oauth2-client": "~2.0",
        "shopware/administration": ">= 6.1.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "kubawerlos/php-cs-fixer-custom-fixers": "^1.17"
    },
    "extra": {
        "shopware-plugin-class": "Cidaas\\OpenAuth\\CidaasOpenAuth",
        "label": {
            "de-DE": "OAuth Login f√ºr Administration",
            "en-GB": "OAuth login for administration"
        },
        "description": {
            "de-DE": "Verbindet OAuth Anbieter zum Administrationslogin",
            "en-GB": "Connects oauth providers to admin login"
        }
    }
}