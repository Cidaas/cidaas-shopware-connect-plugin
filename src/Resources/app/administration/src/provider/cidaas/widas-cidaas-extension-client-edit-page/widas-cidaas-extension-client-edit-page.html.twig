{% block widas_cidaas_extension_client_edit_page_content_provider_settings %}
    {% parent %}

    <sw-card
        v-if="item && item.provider === 'cidaas'"
    >
        <sw-text-field
            :copyable="true"
            :copyableTooltip="true"
            :label="$t('widasCidaasExtensionClient.providerFields.cidaas.redirectUri')"
            :value="item.config.redirectUri"
            disabled
        ></sw-text-field>
        <sw-text-field
            :label="$t('widasCidaasExtensionClient.providerFields.cidaas.clientId')"
            v-model="item.config.clientId"
        ></sw-text-field>
        <sw-password-field
            :label="$t('widasCidaasExtensionClient.providerFields.cidaas.clientSecret')"
            v-model="item.config.clientSecret"
        ></sw-password-field>
        <widas-cidaas-extension-scope-field
            :label="$t('widasCidaasExtensionClient.providerFields.cidaas.additionalScopes')"
            :defaultScopes="['openid', 'profile', 'offline_access']"
            v-model="item.config.scopes"
        ></widas-cidaas-extension-scope-field>
    </sw-card>
{% endblock %}
