{% block sw_profile_index_content %}
    {% parent %}

    {% block sw_profile_index_cidaas_open_auth_card %}
        <sw-card
            :title="$tc('sw-profile-index.titleCidaasOpenAuthCard')"
            :isLoading="isUserLoading"
            class="sw-profile__card sw-card--grid"
        >
            {% block sw_profile_index_cidaas_open_auth_card_clients %}
                <template>
                    {% block sw_profile_index_cidaas_open_auth_card_clients_cards %}
                        <sw-container rows="1fr">
                            <sw-card-section
                                v-for="client of cidaasOpenAuthClients"
                                :key="client.id"
                                divider="bottom"
                            >
                                {% block sw_profile_index_cidaas_open_auth_card_clients_cards_item %}
                                    <sw-container columns="1fr auto">
                                        {% block sw_profile_index_cidaas_open_auth_card_clients_cards_item_provider %}
                                            <div>
                                                {{ $te('cidaasOpenAuthClient.providers.' + client.provider)
                                                    ? $t('cidaasOpenAuthClient.providers.' + client.provider)
                                                    : client.provider }}
                                            </div>
                                        {% endblock %}

                                        {% block sw_profile_index_cidaas_open_auth_card_clients_cards_item_action %}
                                            <sw-button
                                                v-if="client.userKeys.length > 0"
                                                @click="revokeCidaasOpenAuthUserKey(client)"
                                                icon="default-basic-x-line"
                                            >
                                                {{ $t('sw-profile-index.cidaasOpenAuth.userKeys.actions.revoke') }}
                                            </sw-button>
                                            <sw-button
                                                v-else-if="client.active && client.connect"
                                                @click="redirectToLoginMask(client.id)"
                                                icon="default-basic-x-line"
                                            >
                                                {{ $t('sw-profile-index.cidaasOpenAuth.userKeys.actions.connect') }}
                                            </sw-button>
                                        {% endblock %}
                                    </sw-container>
                                {% endblock %}
                            </sw-card-section>
                        </sw-container>
                    {% endblock %}
                </template>
            {% endblock %}
        </sw-card>
    {% endblock %}
{% endblock %}
