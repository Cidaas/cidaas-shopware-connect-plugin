{% block cidaas_open_auth_client_create_page %}
    <sw-page
        :showSmartBar="false"
        :showSearchBar="false"
        class="cidaas-open-auth-client-create-page"
    >
        {% block cidaas_open_auth_client_create_page_inner %}{% endblock %}

        {% block cidaas_open_auth_client_create_page_content %}
            <template #content>
                <template
                    v-if="isLoading"
                >
                    {% block cidaas_open_auth_client_create_page_content_loader %}
                        <sw-loader></sw-loader>
                    {% endblock %}
                </template>
                <template
                    v-else
                >
                    {% block cidaas_open_auth_client_create_page_content_providers %}
                        <sw-card-view>
                            {% block cidaas_open_auth_client_create_page_content_providers_list %}
                                <sw-card
                                    v-for="provider of items"
                                    :key="provider.key"
                                    :title="provider.label"
                                    :classes="provider.classes"
                                    hero
                                    large
                                >
                                    {% block cidaas_open_auth_client_create_page_content_providers_list_item %}
                                        {% block cidaas_open_auth_client_create_page_content_providers_list_item_action %}
                                            <sw-button
                                                @click="createClient(provider)"
                                                class="cidaas-open-auth-client-create-page-providers-provider--action"
                                                variant="ghost"
                                                block
                                            >
                                                {{ provider.actionLabel }}
                                            </sw-button>
                                        {% endblock %}
                                    {% endblock %}
                                </sw-card>
                            {% endblock %}
                        </sw-card-view>
                    {% endblock %}
                </template>
            </template>
        {% endblock %}
    </sw-page>
{% endblock %}
