{% block widas_cidaas_extension_client_edit_page %}
    <sw-page
        :showSearchBar="false"
        class="widas-cidaas-extension-client-edit-page"
    >
        {% block widas_cidaas_extension_client_edit_page_inner %}
        {% endblock %}

        {% block widas_cidaas_extension_client_edit_page_smart_bar_header %}
            <template #smart-bar-header>
                {{ dynamicName }}
            </template>
        {% endblock %}

        {% block widas_cidaas_extension_client_edit_page_search_bar_actions %}
            <template #smart-bar-actions>
                {% block widas_cidaas_extension_client_edit_page_search_bar_actions_delete %}
                    <sw-button
                        :disabled="isLoading"
                        @click="showDeleteModal = true"
                        variant="danger"
                    >
                        {{ $t('widas-cidaas-extension-client.pages.edit.actions.delete') }}
                    </sw-button>
                {% endblock %}

                {% block widas_cidaas_extension_client_edit_page_search_bar_actions_cancel %}
                    <sw-button
                        :disabled="isLoading"
                        @click="cancelEdit"
                    >
                        {{ $t('widas-cidaas-extension-client.pages.edit.actions.cancel') }}
                    </sw-button>
                {% endblock %}

                {% block widas_cidaas_extension_client_edit_page_search_bar_actions_save %}
                    <sw-button-process
                        :disabled="isLoading"
                        :isLoading="isLoading"
                        @click.prevent="saveItem"
                        v-model="isSaveSuccessful"
                        variant="primary"
                    >
                        {{ $t('widas-cidaas-extension-client.pages.edit.actions.save') }}
                    </sw-button-process>
                {% endblock %}
            </template>
        {% endblock %}

        {% block widas_cidaas_extension_client_edit_page_content %}
            <template #content>
                <sw-card-view>
                    {% block widas_cidaas_extension_client_edit_page_content_base_settings %}
                        <sw-card
                            :isLoading="isLoading"
                        >
                            <template v-if="item">
                                <sw-text-field
                                    :label="$t('widas-cidaas-extension-client.pages.edit.fields.name')"
                                    v-model="item.name"
                                ></sw-text-field>
                                <sw-switch-field
                                    :label="$t('widas-cidaas-extension-client.pages.edit.fields.active')"
                                    v-model="item.active"
                                ></sw-switch-field>
                                <sw-switch-field
                                    :disabled="!item.active"
                                    :label="$t('widas-cidaas-extension-client.pages.edit.fields.login')"
                                    v-model="item.login"
                                ></sw-switch-field>
                                <sw-switch-field
                                    :disabled="!item.active"
                                    :label="$t('widas-cidaas-extension-client.pages.edit.fields.connect')"
                                    v-model="item.connect"
                                ></sw-switch-field>
                                <sw-switch-field
                                    :disabled="!item.active"
                                    :label="$t('widas-cidaas-extension-client.pages.edit.fields.storeUserToken')"
                                    v-model="item.storeUserToken"
                                ></sw-switch-field>
                            </template>
                        </sw-card>
                    {% endblock %}

                    {% block widas_cidaas_extension_client_edit_page_content_provider_settings %}{% endblock %}
                </sw-card-view>

                {% block widas_cidaas_extension_client_edit_page_content_modal_delete %}
                    <sw-modal
                        v-if="showDeleteModal"
                        :title="$t('widas-cidaas-extension-client.pages.edit.modals.delete.title')"
                        @modal-close="showDeleteModal = false"
                        variant="small"
                    >
                        {% block widas_cidaas_extension_client_edit_page_content_modal_delete_confirm_text %}
                            <p>
                                {{ $t('widas-cidaas-extension-client.pages.edit.modals.delete.warning') }}
                            </p>
                            <p>
                                <strong>{{ dynamicName }}</strong>
                            </p>
                            <p>
                                {{ $t('widas-cidaas-extension-client.pages.edit.modals.delete.explanation') }}
                            </p>
                        {% endblock %}

                        {% block widas_cidaas_extension_client_edit_page_content_modal_delete_footer %}
                            <template #modal-footer>
                                {% block widas_cidaas_extension_client_edit_page_content_modal_delete_abort %}
                                    <sw-button
                                        size="small"
                                        @click="showDeleteModal = false"
                                    >
                                        {{ $t('widas-cidaas-extension-client.pages.edit.modals.delete.cancel') }}
                                    </sw-button>
                                {% endblock %}

                                {% block widas_cidaas_extension_client_edit_page_content_modal_delete_delete %}
                                    <sw-button
                                        size="small"
                                        variant="danger"
                                        @click="onConfirmDelete"
                                    >
                                        {{ $t('widas-cidaas-extension-client.pages.edit.modals.delete.confirm') }}
                                    </sw-button>
                                {% endblock %}
                            </template>
                        {% endblock %}
                    </sw-modal>
                {% endblock %}
            </template>
        {% endblock %}
    </sw-page>
{% endblock %}
